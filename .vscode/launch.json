  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Attach to Chrome",
      "port": 8080,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}"
    },

    {
      "type": "chrome",
      "request": "attach",
      "name": " Chrome",
      "url": "http://localhost/mypage.html",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/craft/index.html"
    }
  ]
}